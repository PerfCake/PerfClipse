<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <command
               commandId="org.perfclipse.ui.runScenario"
               label="Run PerfCake Sceanrio"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.perfclipse.ui.handlers.RunHandler"
            id="org.perfclipse.ui.command.runScenario"
            name="RunScenario">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.perfclipse.ui.wizards.category.perfcake"
            name="PerfCake">
      </category>
      <wizard
            category="org.perfclipse.ui.wizards.category.perfcake"
            class="org.perfclipse.ui.wizards.PerfcakeProjectWizard"
            icon="icons/perfcake.ico"
            id="org.perfclipse.ui.wizards.perfcakeproject"
            name="PerfCake project"
            project="true">
      </wizard>
      <wizard
            canFinishEarly="true"
            category="org.perfclipse.ui.wizards.category.perfcake"
            class="org.perfclipse.ui.wizards.ScenarioWizard"
            id="org.perfclipse.ui.wizards.scenario"
            name="PerfCake scenario">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.perfclipse.ui.editors.ScenarioMultiPageEditor"
            contributorClass="org.perfclipse.ui.editors.DesignEditorActionBarContributor"
            default="false"
            extensions="xml"
            id="org.perfclipse.ui.editors.scenario"
            name="Scenario editor">
         <contentTypeBinding
               contentTypeId="org.perfclipse.ui.contenttype.scenario">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         id="org.perfclipse.ui.contenttype"
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            file-extensions="xml"
            id="org.perfclipse.ui.contenttype.scenario"
            name="PerfCake scenario file"
            priority="high">
         <describer
               class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber2">
            <parameter
                  name="element"
                  value="scenario">
            </parameter>
         </describer>
      </content-type>
   </extension>

</plugin>
